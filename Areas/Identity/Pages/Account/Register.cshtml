@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<br />
<div class="form-group">
    <h4 class="text-success text-center">Créer un nouveau compte</h4>
</div>

<br />
<br />

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="white-Background border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.Name" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.Email" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.StreetAdress" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.StreetAdress" class="form-control" />
                <span asp-validation-for="Input.StreetAdress" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.City" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.State" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.State" class="form-control" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.PostalCode" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.PostalCode" class="form-control" />
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.Password" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-4">
                <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
       @if(User.IsInRole(SD.ManagerUser))
        { 
        <div class="row">
            <div class="col-4 ">        </div>
            <div class="col-8 row">
                <label class="form-check-label col-4">
                    <input type="radio" value="@SD.KitchenUser" name="rdUserRole" checked /> @SD.KitchenUser
                </label>

                <label class="form-check-label col-4">
                    <input type="radio" value="@SD.FrontDeskUser" name="rdUserRole" /> @SD.FrontDeskUser
                </label>

                <label class="form-check-label col-4">
                    <input type="radio" value="@SD.ManagerUser" name="rdUserRole" /> @SD.ManagerUser
                </label>
            </div>
        </div>
        }
        <br />
        <div class="row col-8 offset-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Register</button>
            </div>
            <div class="col-6">
                <a class="btn btn-success form-control" asp-action="Index" asp-controller="Home"
                   asp-area="Customer">Annuler</a>
            </div>
        </div>


    </div>

    <div class="row form-group">
        <div class="col-8 offset-4">
            <a class="btn btn-outline-info form-control" asp-action="Index" asp-controller="Home"
               asp-area="Customer">Retour à la liste</a>
        </div>

    </div>
</form>

