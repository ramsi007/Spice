@model OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="white-Background">
    <div class="row px-3">
        <div class="col-8">
            <h2 class="text-info">Commande Confirmé</h2>
        </div>

        <div class="col-4 text-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control">Nouvelle commande</a>
        </div>
    </div>

    @if (Model.OrderHeader != null)
    {
        <div style="color:maroon" class="p-3">
            Votre commande est terminé ! veuillez consulter le récapitulatif de la commande ci-dessous
            <br />
            N'hésitez pas à nous contacter si vous avez des questions.
        </div>

        <partial name="_IndividualOrderDetails" model="Model" />
    }
    else
    {
        <div class="text-danger">Erreur ...! Veuillez réessayer plus tard</div>
    }
</div>

