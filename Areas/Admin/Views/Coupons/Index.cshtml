@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="white-Background border">
    <div class="row">
        <div class="col-6">
            <h3 class="text-info text-center">Liste des Coupons</h3>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
</div>

    <div>
        @if (Model.Count() == 0)
        {
            <h3 class="text-center text-danger pt-4"> Aucun coupons dans cette liste ... </h3>
        }
        else
        {
            <table class="table table-striped border table-hover">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Discount)</th>
                    <th>@Html.DisplayNameFor(m => m.MinimumAmount)</th>
                    <th>@Html.DisplayNameFor(m => m.IsActive)</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Discount)</td>
                        <td>@Html.DisplayFor(m => item.MinimumAmount)</td>
                        <td>@Html.DisplayFor(m => item.IsActive)</td>
                        <td style="width:150px">
                            <partial name="_OperationsButtonsPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }

    </div>




