@model Category
@{
    ViewData["Title"] = "Edit";
}

<br />
<div class="form-group">
    <h4 class="text-success text-center">Modifier une Catégorie</h4>
</div>

<br />
<br />

<form asp-action="Edit" method="post">
    <div class="white-Background border">
        @Html.HiddenFor(m => m.Id)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <br />
        <partial name="_UpdateAndBAckToListButtonsPartial" />

    </div>

    <div class="row form-group">
        <div class="col-12">
            <a class="btn btn-outline-info form-control" asp-action="Index">Retour à la liste</a>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


