@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="white-Background border">
    <div class="row">
        <div class="col-6">
            <h3 class="text-info">Liste des catégories</h3>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
</div>

<div>
    @if (Model.Count() == 0)
    {
        <h3 class="text-center text-danger pt-4"> Aucune Catégorie dans cette liste ... </h3>
    }
    else
    {
        <table class="table table-striped border table-hover">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td style="width:150px">
                        <partial name="_OperationsButtonsPartial" model="item.Id"/>
                    </td>
                </tr>
            }
        </table>
    }

</div>
